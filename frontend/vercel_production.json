{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "yarn build",
  "outputDirectory": "build",
  "installCommand": "yarn install",
  "framework": "create-react-app",
  "devCommand": "yarn start",
  
  "env": {
    "REACT_APP_BACKEND_URL": "https://quantpaychain-api2.onrender.com/api",
    "REACT_APP_SUPABASE_URL": "https://ckitbbtlzzxuangsieqo.supabase.co",
    "REACT_APP_ENABLE_PWA": "true",
    "REACT_APP_ENABLE_EARNINGS_DASHBOARD": "true",
    "REACT_APP_ENABLE_QPC_FEATURES": "true",
    "NODE_ENV": "production"
  },
  
  "regions": ["iad1"],
  
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  
  "functions": {
    "maxDuration": 10
  }
}
